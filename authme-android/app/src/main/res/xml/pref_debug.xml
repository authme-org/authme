<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="DEBUG"
        android:key="debug_title">

        <EditTextPreference
            android:key="authme_service_url"
            android:title="@string/pref_title_service_url"
            android:summary="@string/pref_summary_service_url"
            android:defaultValue="@string/pref_default_service_url"
            android:selectAllOnFocus="true"
            android:inputType="textUri"
            android:capitalize="none"
            android:singleLine="true"
            android:maxLines="1" />

    </PreferenceCategory>

</PreferenceScreen>
