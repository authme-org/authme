        <Border BorderBrush="#FFC3C3C3" BorderThickness="1" HorizontalAlignment="Left" Height="55" Margin="14,115,0,0" VerticalAlignment="Top" Width="326"/>
        <TextBox x:Name="userIdTextBox" HorizontalAlignment="Left" Height="23" Margin="22,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="311"/>
