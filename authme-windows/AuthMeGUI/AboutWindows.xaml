<Window x:Class="AuthMeGUI.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AuthMeGUI"
        mc:Ignorable="d"
        Title="About" Height="300" Width="250">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
        </Grid.Background>
        <Border BorderBrush="#FFC1C1C1" BorderThickness="1" HorizontalAlignment="Center" Height="241" VerticalAlignment="Center" Width="214" Margin="10"/>

        <Image x:Name="image" Source="pack://application:,,,/authme_icon.png"  HorizontalAlignment="Center" Height="100" Margin="0,0,0,30" VerticalAlignment="Bottom" Width="100"/>
        <Label x:Name="label" Content="AuthMe Version 0.1.0" HorizontalAlignment="Center" Margin="10,30,10,0" VerticalAlignment="Top" Width="122"/>
        <Label x:Name="label1" Content="Copyright 2016 Berin Lautenbach" HorizontalAlignment="Center" Margin="0,68,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
